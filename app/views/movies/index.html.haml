-# This file is app/views/movies/index/html.hamil
%h1 All Movies

%table#movies
    %thead
        %tr
            %th Movie title
            %th Rating
            %th Release Date
            %th More info
        %body
        - @movies.each do |movie|
            %tr
                %td= movie.title
                %td= movie.rating
                %td= movie.release_date
                %td= link_to 'More about #{movie.title}', movie_path(movie)
                
-# add to end of index.html.haml
= link_to 'Add new movie', new_movie_path